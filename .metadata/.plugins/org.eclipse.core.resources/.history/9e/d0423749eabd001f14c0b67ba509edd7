spring.application.name=Springboot

#connecting to port
server.port=8181

# H2 Database JDBC URL (in-memory database)
spring.datasource.url=jdbc:h2:~/Eshi

# H2 Database driver class
spring.datasource.driverClassName=org.h2.Driver

# H2 Database username
spring.datasource.username=sEshi

# H2 Database password (default is empty, you can set your own password)
spring.datasource.password=Eshi@26

spring.jpa.database-platform=org.hibernate.dialect.H2Dialect


# Enable showing SQL queries in the log
spring.jpa.show-sql=true

# Format the SQL queries to make them more readable
spring.jpa.properties.hibernate.format_sql=true


#create-drop
spring.jpa.hibernate.ddl-auto=create-drop
